    /**
     * 将数字型答案转化成字符答案 1=>A 2=>B 3=>C 4=>D
     * author: lying
     * Date: 2018/10/19
     * param array
     * return array
     */
    function Num2Char($arr){
        foreach ($arr as $key => $value) {
            if(is_array($value)){
                $arr[$key] = $this->Num2Char($value);
            }
            else {
                switch ($value) {
                    case 1:
                        $arr[$key] = 'A';
                        break;
                    case 2:
                        $arr[$key] = 'B';
                        break;
                    case 3:
                        $arr[$key] = 'C';
                        break;
                    case 4:
                        $arr[$key] = 'D';
                        break;
                    default:
                        $arr[$key] = '';
                        break;
                }
            }
        }
        return $arr;
    }
