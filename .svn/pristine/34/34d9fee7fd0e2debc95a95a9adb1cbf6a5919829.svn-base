</body>
	<script>
	mui.init();
	(function($){
		$(".mui-scroll-wrapper").scroll({
			//bounce: false,//滚动条是否有弹力默认是true
			indicators: false, //是否显示滚动条,默认是true
		}); 
	})(mui);
	
	mui(".mui-card-header").on("tap",".check_error",function(){
		mui("#popover").popover('toggle',document.getElementById("popover_div"));
	});
		
	mui(".checkbox").on("tap",".option_tab",function(){
		this.classList.toggle('active');
		var rdsObj=this.parentNode.parentNode.getElementsByClassName("answer_tab_p");
		if(rdsObj.length){
			var checkVal = new Array();
			var k= 0;
			for(i = 0; i < rdsObj.length; i++){
				if(rdsObj[i].getElementsByClassName("active").length){
					checkVal[k] = rdsObj[i].getElementsByClassName("option_tab")[0].dataset['option'];
					k++;
				}
			}
		};
		document.getElementById("check_answer_val").value=checkVal;
	});
	mui("#popover").on("tap","#J_checkerror_btn",function(){
		var answerVal=document.getElementById("check_answer_val").value;
		var desrciption=document.getElementById("description").value;
		if(!answerVal){mui.toast('请选择答案！',{ duration:'long', type:'div' });return false;}
		if(!desrciption){mui.toast('请填写理由！',{ duration:'long', type:'div' });return false; }
		mui.ajax('http://server-name/login.php',{
			data:{
				answerVal:answerVal,
				desrciption:desrciption
			},
			dataType:'json',//服务器返回json格式数据
			type:'post',//HTTP请求类型
			timeout:10000,//超时时间设置为10秒；
			headers:{'Content-Type':'application/json'},	              
			success:function(data){
				//服务器返回响应，根据响应结果，分析是否登录成功；
				alert(data.msg);
			},
			error:function(xhr,type,errorThrown){
				//异常处理；
				console.log(type);
			}
		});
	})
		
	
	</script>
</html>
