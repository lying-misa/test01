<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
<title>123456798</title>
<link href="__PUBLIC__/mobile/css/mui.min.css" rel="stylesheet"/>
<link href="__PUBLIC__/mobile/css/iconfont.css" rel="stylesheet"/>
<link href="__PUBLIC__/mobile/css/common.css" rel="stylesheet"/>
<script src="__PUBLIC__/mobile/js/mui.min.js"></script>
</head>
<body>
<header class="mui-bar mui-bar-nav bg-theme ">

	<button class="mui-action-back mui-btn mui-btn-link mui-btn-nav mui-pull-left" style="color: #fff;"><span class="mui-icon mui-icon-left-nav"></span></button>
  <h1 class="mui-title colorF">消息</h1>
</header>
<div class="mui-content mui-scroll-wrapper ">
  <div class="mui-scroll">
    <ul class="mui-table-view">
		
		<volist name="list" id="vo">
			<li class="mui-table-view-cell mui-media">
        <div class="mui-slider-handle"> <a href="javascript:;"> <img class="mui-media-object mui-pull-left" src="__PUBLIC__/mobile/images/kefu@2x.png" alt="">
          <div class="mui-media-body"> {$vo.Title}
            <p class='mui-ellipsis'>{$vo.Content}</p>
          </div>
          </a> </div>
      </li>
		</volist>
      

    </ul>
  </div>
</div>
</body>
<script>
	mui.init();
	mui("body").on('tap','.J_collect',function(){
		var id=this.dataset['id'];
		if(!id){mui.toast('缺少ID，操作失败！',{ duration:'long', type:'div' });return false;}
		mui.ajax('http://server-name/login.php',{
			data:{
				id:id
			},
			dataType:'json',//服务器返回json格式数据
			type:'post',//HTTP请求类型
			timeout:10000,//超时时间设置为10秒；
			headers:{'Content-Type':'application/json'},	              
			success:function(data){
				//服务器返回响应，根据响应结果，分析是否登录成功；
				if(data.type==1){
					mui.toast(data.msg,{ duration:'long', type:'div' });
			   	}else if(data.type==2){
					mui.toast(data.msg,{ duration:'long', type:'div' });
			   	}else{
					mui.toast(data.msg,{ duration:'long', type:'div' });
			   	}
			},
			error:function(xhr,type,errorThrown){
				//异常处理；
				console.log(type);
			}
		});
	});
	</script>
</html>
